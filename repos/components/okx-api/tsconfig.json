{
  "compilerOptions": {
    "strict": true,

    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2015", "dom"],

    "outDir": "./out",
    "rootDir": "./src",
    "baseUrl": "./src",

    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "out"]
}
